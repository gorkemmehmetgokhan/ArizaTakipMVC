@using ArizaTakipMVC.Models
@model tbl_Departman

@{
    ViewBag.Title = "DepartmanEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("DepartmanEkle", "Departman", FormMethod.Post))
{
    <h2><i class="fas fa-plus"></i> Yeni Departman Ekle</h2>
    <table class="table table-hover table-bordered">


        <tr>
            <td><label for="inputDepartmanAdi">Departman Adı</label></td>
            <td>@Html.TextBoxFor(model => model.DepartmanAd, new { @class = "form-control", required = "required", placeholder = "Departman adı giriniz" }) </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Departman Listesine Geri dön", "DepartmanListesi")
            </td>
            <td>
                <input type="submit" class="btn btn-success" value="Departman Ekle" />
            </td>
        </tr>
    </table>
}


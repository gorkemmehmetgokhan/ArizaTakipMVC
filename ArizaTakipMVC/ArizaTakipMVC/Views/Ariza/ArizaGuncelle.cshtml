@using ArizaTakipMVC.Models
@model ArizaTakipMVC.Models.ViewModel.ArizaViewModel

@{
    ViewBag.Title = "ArizaGuncelle";
    Layout = "~/Views/Shared/_KullaniciLayout.cshtml";
}

@using (Html.BeginForm("ArizaGuncelle", "Ariza", FormMethod.Post))
{
    <h2> <i class="fas fa-pencil-alt"></i> Arıza Kaydını Güncelle</h2>
    <table class="table table-hover table-bordered">
        @Html.HiddenFor(model => model.ArizaYeniKayit.id_Ariza)

        <tr>
            <td><label>Arıza Türü</label></td>
            <td> @Html.DropDownListFor(model => model.ArizaYeniKayit.id_ArizaTur, Model.ArizaTurListesi , new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td><label for="inputArizaAciklama">Açıklama</label></td>
            <td>@Html.TextBoxFor(model => model.ArizaYeniKayit.Aciklama, new { @class = "form-control", required = "required", placeholder = "Açıklama giriniz" }) </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Arıza Listesine Geri dön", "ArizaListesi")
            </td>
            <td>
                <input type="submit" class="btn btn-success" value="Arıza Güncelle" />
            </td>
        </tr>
    </table>
}


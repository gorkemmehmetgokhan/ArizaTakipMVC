@using ArizaTakipMVC.Models
@model tbl_ArizaTur

@{
    ViewBag.Title = "ArizaTurEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("ArizaTurEkle", "Ariza", FormMethod.Post))
{
    <h2><i class="fas fa-plus"></i> Yeni Arıza Türü Ekle</h2>
    <table class="table table-hover table-bordered">

     
        <tr>
            <td><label for="inputArizaAciklama">Şifre</label></td>
            <td>@Html.TextBoxFor(model => model.ArizaTurAd, new { @class = "form-control", required = "required", placeholder = "Arıza türü adı giriniz" }) </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Arızala Türleri Listesine Geri dön", "ArizaTurListesi")
            </td>
            <td>
                <input type="submit" class="btn btn-success" value="Arıza Türü Ekle" />
            </td>
        </tr>
    </table>
}


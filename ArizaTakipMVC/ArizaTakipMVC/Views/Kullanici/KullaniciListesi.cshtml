@using ArizaTakipMVC.Models
@model ArizaTakipMVC.Models.ViewModel.KullaniciViewModel

@{
    ViewBag.Title = "KullaniciListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <h2><i class="fas fa-list"></i> Kullanıcı Listesi</h2>

<table class="table table-hover table-bordered">
    <tr>
        <th>Ad Soyad</th>
        <th>Departman</th>
        <th>Kullanıcı Tür</th>
        <th>E-Posta</th>
        <th>Şifre</th> 
        <th>İşlemler</th>
    </tr>
    @foreach (tbl_Kullanici item in Model.Kullanicilar)
    {
        <tr>
            <td>@Html.DisplayFor(t => item.Ad) @Html.DisplayFor(t => item.Soyad)</td>
            <td>@Html.DisplayFor(t => item.tbl_Departman.DepartmanAd)</td>
            <td>@Html.DisplayFor(t => item.tbl_KullaniciTur.TurAd)</td>
            <td>@Html.DisplayFor(t => item.Eposta)</td>
            <td>@Html.DisplayFor(t => item.Sifre)</td>
          
            <td>
                <a href="~/Kullanici/KullaniciGuncelle/@item.id_Kullanici" class="btn btn-success"> <i class="fas fa-pencil-alt"></i> Kullanıcıyı Güncelle</a>
                <a href="~/Kullanici/KullaniciSil/@item.id_Kullanici" class="btn btn-danger"><i class="fas fa-times"></i> Kullanıcıyı Sil</a>
            </td>
        </tr>
    }
</table>